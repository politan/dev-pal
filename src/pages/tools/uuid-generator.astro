---
import BaseLayout from '../../layouts/BaseLayout.astro';
---

<BaseLayout title="UUID Generator - DevPal">
  <div class="container mx-auto px-4 py-12">
    <div class="max-w-4xl mx-auto">
      <div class="mb-8">
        <h1 class="text-3xl font-bold text-foreground mb-2">UUID/GUID Generator</h1>
        <p class="text-muted-foreground">Generate various versions of UUIDs, individually or in batches</p>
      </div>
      
      <div class="bg-card rounded-lg border p-6">
        <div class="text-center py-12">
          <h2 class="text-xl font-semibold text-card-foreground mb-4">Coming Soon</h2>
          <p class="text-muted-foreground mb-6">This tool is currently under development.</p>
          <a 
            href="/" 
            class="inline-flex items-center px-4 py-2 bg-primary text-primary-foreground rounded-md hover:bg-primary/90 transition-colors"
          >
            ‚Üê Back to Tools
          </a>
        </div>
      </div>
    </div>
  </div>
</BaseLayout>