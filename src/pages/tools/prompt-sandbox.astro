---
import AppLayout from '../../layouts/AppLayout.astro';
import ToolPage from '../../components/ToolPage.vue';
import { MessageSquare } from 'lucide-vue-next';
---

<AppLayout title="Prompt Sandbox - DevPal" currentTool="prompt-sandbox">
  <ToolPage 
    title="Prompt Sandbox"
    description="Test and refine prompts across different LLMs with side-by-side comparison"
    icon={MessageSquare}
    tags={['AI', 'Prompts', 'LLM', 'Compare', 'Testing']}
    comingSoon={true}
    expectedFeatures={[
      'Support for OpenAI, Anthropic, Google Gemini APIs',
      'Side-by-side response comparison',
      'Temperature and parameter adjustments',
      'Prompt templates and history',
      'Token usage tracking',
      'Response export and sharing'
    ]}
    client:load
  />
</AppLayout>